                            </StackPanel>
                            <TextBlock Text="{DynamicResource Home_RefinedQuality_Desc}" 
                                       Foreground="#888888" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                        </StackPanel>
                    </Grid>

                    
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="{DynamicResource Home_CoreModules}" Foreground="#666666" FontSize="12" FontWeight="Bold" Margin="0,0,0,8"/>
                        <TextBlock Text="{DynamicResource Home_CoreModules_Desc}" 
                                   Foreground="#CCCCCC" FontSize="13" TextWrapping="Wrap" LineHeight="22"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

