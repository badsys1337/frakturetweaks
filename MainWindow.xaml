                            </StackPanel>
                            <TextBlock Text="{DynamicResource Home_AllInclusive_Desc}" 
                                       Foreground="#888888" FontSize="13" TextWrapping="Wrap" LineHeight="20"/>
                        </StackPanel>

                        
                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Path Data="M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1Z" Fill="#444" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0" VerticalAlignment="Center"/>
