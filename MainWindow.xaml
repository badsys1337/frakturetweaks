                    <Grid Width="240" Height="34">
                        <Border x:Name="ModeSelectionPill" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#3E3E42" CornerRadius="10">
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="ModeSelectionTransform" X="0"/>
                            </Border.RenderTransform>
                        </Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="EasyModeRadio" Grid.Column="0" Content="{DynamicResource Mode_Easy}" GroupName="Mode" Checked="EasyModeRadio_Checked" Foreground="#DDDDDD" FontSize="13" FontWeight="SemiBold" Cursor="Hand">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="Transparent" Padding="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                            <RadioButton x:Name="AdvancedModeRadio" Grid.Column="1" Content="{DynamicResource Mode_Advanced}" GroupName="Mode" Checked="AdvancedModeRadio_Checked" Foreground="#DDDDDD" FontSize="13" FontWeight="SemiBold" Cursor="Hand">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="Transparent" Padding="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
            <Grid x:Name="HomeView">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="80,0">
                    
                    <TextBlock Text="{DynamicResource Home_Title}" Foreground="#FFFFFF" FontSize="36" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Border Height="2" Background="#333333" HorizontalAlignment="Left" Width="100" Margin="0,0,0,30"/>

                    
                    <TextBlock Text="{DynamicResource Home_Subtitle}" 
                               Foreground="#AAAAAA" FontSize="16" FontStyle="Italic" Margin="0,0,0,25"/>

                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Path Data="M12,2L4.5,20.29L5.21,21L12,18L18.79,21L19.5,20.29L12,2Z" Fill="#444" Width="20" Height="20" Stretch="Uniform" Margin="0,0,12,0" VerticalAlignment="Center"/>
