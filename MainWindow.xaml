                        <Path Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" Style="{StaticResource SidebarIconStyle}"/>
                        <TextBlock Text="{DynamicResource Nav_Home}"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton GroupName="Nav" Style="{StaticResource NavRadioButtonStyle}" Click="Nav_Click" Tag="WindowsTweaksView">
                    <StackPanel Orientation="Horizontal">
