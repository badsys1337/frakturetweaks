                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="StartTweakingBtn" Click="StartTweakingBtn_Click" Padding="22,11" FontSize="13" FontWeight="SemiBold" Foreground="White" BorderThickness="0" Cursor="Hand">
