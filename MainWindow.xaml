                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Border>

        
        <Grid Grid.Column="1" Background="#1F1F1F">
            <local:SnowOverlay />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,18,24,0" Panel.ZIndex="50">
                <Border x:Name="LanguageSwitcher" Background="#252526" BorderBrush="#333" BorderThickness="1" CornerRadius="12" Padding="2" Margin="0,0,12,0">
                    <Grid Width="100" Height="34">
                        <Border x:Name="LangSelectionPill" Width="50" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#3E3E42" CornerRadius="10">
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="LangSelectionTransform" X="0"/>
                            </Border.RenderTransform>
                        </Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="EnglishRadio" Grid.Column="0" Content="EN" GroupName="Lang" IsChecked="True" Checked="EnglishRadio_Checked" Foreground="#DDDDDD" FontSize="13" FontWeight="SemiBold" Cursor="Hand">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="Transparent" Padding="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                            <RadioButton x:Name="RussianRadio" Grid.Column="1" Content="RU" GroupName="Lang" Checked="RussianRadio_Checked" Foreground="#DDDDDD" FontSize="13" FontWeight="SemiBold" Cursor="Hand">
                                <RadioButton.Template>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border Background="Transparent" Padding="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </RadioButton.Template>
                            </RadioButton>
                        </Grid>
                    </Grid>
                </Border>

