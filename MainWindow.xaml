                    </StackPanel>
                </RadioButton>
                <RadioButton GroupName="Nav" Style="{StaticResource NavRadioButtonStyle}" Click="Nav_Click" Tag="GpuTweaksView">
                    <StackPanel Orientation="Horizontal">
