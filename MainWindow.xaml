                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            
                            <Border Grid.Column="0" Grid.Row="0" Background="#252526" CornerRadius="10" Padding="20" BorderBrush="#333" BorderThickness="1">
                                <StackPanel>
