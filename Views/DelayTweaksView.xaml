<UserControl x:Class="Frakture_Tweaks.DelayTweaksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frakture_Tweaks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="DelayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="17,10"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
            <Setter Property="Width" Value="240"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="{DynamicResource Delay_Title}" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="{DynamicResource Delay_Desc}" 
                           Foreground="#BBB" 
                           FontSize="14" 
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"/>

                <TextBlock Text="{DynamicResource Delay_MainTitle}" Foreground="Gray" FontSize="12" Margin="0,0,0,10" FontWeight="Bold"/>
                <WrapPanel Margin="0,0,0,20">
                    <Button x:Name="DemolishDelayBtn"
                            Content="{DynamicResource Delay_Demolish}"
                            Click="DemolishDelayBtn_Click"
                            Style="{StaticResource DelayButtonStyle}"/>
                </WrapPanel>

                <TextBlock Text="{DynamicResource Delay_AdvTitle}" Foreground="Gray" FontSize="12" Margin="0,0,0,10" FontWeight="Bold"/>
                <WrapPanel Margin="0,0,0,20">
                    <Button x:Name="BcdLatencyBtn"
                            Content="{DynamicResource Delay_Bcd}"
                            Click="BcdLatencyBtn_Click"
                            Style="{StaticResource DelayButtonStyle}"/>

                    <Button x:Name="GpuMonitorLatencyBtn"
                            Content="{DynamicResource Delay_GpuMon}"
                            Click="GpuMonitorLatencyBtn_Click"
                            Style="{StaticResource DelayButtonStyle}"/>

                    <Button x:Name="SystemMitigationsBtn"
                            Content="{DynamicResource Delay_Mitigations}"
                            Click="SystemMitigationsBtn_Click"
                            Style="{StaticResource DelayButtonStyle}"/>

                    <Button x:Name="EnableTrimBtn"
                            Content="{DynamicResource Delay_Trim}"
                            Click="EnableTrimBtn_Click"
                            Style="{StaticResource DelayButtonStyle}"/>

                    <Button x:Name="MouseHidBtn"
                            Content="{DynamicResource Delay_MouseHid}"
                            Click="MouseHidBtn_Click"
                            Style="{StaticResource DelayButtonStyle}"/>
                </WrapPanel>

                <TextBlock x:Name="StatusText" 
                           Foreground="#888" 
                           FontSize="12" 
                           Margin="0,5,0,0" 
                           TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
