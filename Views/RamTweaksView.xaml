<UserControl x:Class="Frakture_Tweaks.RamTweaksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frakture_Tweaks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="RamButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="{DynamicResource Ram_Title}" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,20"/>

                <TextBlock Text="{DynamicResource Ram_Desc}" 
                           Foreground="#BBB" 
                           FontSize="14" 
                           Margin="0,0,0,30"
                           TextWrapping="Wrap"/>

                <Button x:Name="GlobalRamTweaksBtn"
                        Content="{DynamicResource Ram_Global}"
                        Click="GlobalRamTweaksBtn_Click"
                        Style="{StaticResource RamButtonStyle}"
                        Width="280"
                        HorizontalAlignment="Left"
                        FontSize="14"
                        Padding="20,10"/>

                <TextBlock Text="{DynamicResource Ram_SvcTitle}" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,15"/>
                
                <TextBlock Text="{DynamicResource Ram_SvcDesc}" 
                           Foreground="#888" 
                           FontSize="12" 
                           Margin="0,0,0,10"/>

                <UniformGrid Columns="3" HorizontalAlignment="Left">
                    <Button x:Name="Svc4GBBtn" Content="{DynamicResource Ram_4GB}" Click="SvcRAMBtn_Click" Style="{StaticResource RamButtonStyle}" Width="145"/>
                    <Button x:Name="Svc8GBBtn" Content="{DynamicResource Ram_8GB}" Click="SvcRAMBtn_Click" Style="{StaticResource RamButtonStyle}" Width="145"/>
                    <Button x:Name="Svc16GBBtn" Content="{DynamicResource Ram_16GB}" Click="SvcRAMBtn_Click" Style="{StaticResource RamButtonStyle}" Width="145"/>
                    <Button x:Name="Svc32GBBtn" Content="{DynamicResource Ram_32GB}" Click="SvcRAMBtn_Click" Style="{StaticResource RamButtonStyle}" Width="145"/>
                    <Button x:Name="Svc64GBBtn" Content="{DynamicResource Ram_64GB}" Click="SvcRAMBtn_Click" Style="{StaticResource RamButtonStyle}" Width="145"/>
                    <Button x:Name="SvcAutoBtn" Content="{DynamicResource Ram_Auto}" Click="SvcRAMBtn_Click" Style="{StaticResource RamButtonStyle}" Width="145"/>
                </UniformGrid>

                <TextBlock Text="{DynamicResource Ram_AdvTitle}" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,20,0,15"/>

                <UniformGrid Columns="2" HorizontalAlignment="Left">
                    <Button x:Name="DisableMemoryCompressionBtn" Content="{DynamicResource Ram_DisableComp}" Click="DisableMemoryCompressionBtn_Click" Style="{StaticResource RamButtonStyle}"/>
                    <Button x:Name="OptimizePagingBtn" Content="{DynamicResource Ram_OptPaging}" Click="OptimizePagingBtn_Click" Style="{StaticResource RamButtonStyle}"/>
                    <Button x:Name="DisablePrefetchBtn" Content="{DynamicResource Ram_DisablePre}" Click="DisablePrefetchBtn_Click" Style="{StaticResource RamButtonStyle}"/>
                    <Button x:Name="LargeSystemCacheBtn" Content="{DynamicResource Ram_LargeCache}" Click="LargeSystemCacheBtn_Click" Style="{StaticResource RamButtonStyle}"/>
                </UniformGrid>

                <TextBlock x:Name="StatusText" 
                           Text="" 
                           Foreground="LightGreen" 
                           FontSize="12" 
                           Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
