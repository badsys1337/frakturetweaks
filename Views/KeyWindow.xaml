<Window x:Class="Frakture_Tweaks.KeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frakture_Tweaks"
        mc:Ignorable="d"
        Title="Activate License" Height="400" Width="600"
        Background="#1F1F1F"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    
    <Window.Resources>
        <Style TargetType="Button" x:Key="FlatButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        
        <local:SnowOverlay Panel.ZIndex="0" Opacity="0.4"/>
        
        <Border BorderBrush="#333" BorderThickness="1" Panel.ZIndex="1" Background="Transparent">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
                <TextBlock Text="Frakture Tweaks" Foreground="White" FontSize="28" FontWeight="Light" HorizontalAlignment="Center" Margin="0,0,0,40">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                
                <TextBlock Text="ENTER LICENSE KEY" Foreground="#888" FontSize="12" Margin="0,0,0,8" FontWeight="Bold"/>
                
                <TextBox x:Name="KeyBox" Height="40" Background="#252526" Foreground="White" BorderBrush="#444" 
                          VerticalContentAlignment="Center" Padding="10,0" FontSize="14" CaretBrush="White">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                
                <CheckBox x:Name="RememberCheck" Content="Save me!" Foreground="#AAA" Margin="0,15,0,0" IsChecked="True" Cursor="Hand">
                     <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                    </CheckBox.LayoutTransform>
                </CheckBox>
                
                <Button x:Name="RedeemBtn" Content="ACTIVATE" Height="45" Margin="0,25,0,0" 
                        Background="#333333" Foreground="White" FontSize="14" FontWeight="Bold"
                        Style="{StaticResource FlatButton}" Click="RedeemBtn_Click" Cursor="Hand" BorderBrush="#555555" BorderThickness="1"/>
                
                <TextBlock x:Name="StatusText" Text="" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,15,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                
                <Button Content="Exit" HorizontalAlignment="Center" Margin="0,20,0,0" 
                        Foreground="#666" Background="Transparent" BorderThickness="0" 
                        Click="Exit_Click" Cursor="Hand" FontSize="14" FontFamily="Segoe UI">
                     <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
