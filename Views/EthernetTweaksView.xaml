<UserControl x:Class="Frakture_Tweaks.EthernetTweaksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frakture_Tweaks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="EthernetButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="17,10"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="Width" Value="240"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="{DynamicResource Eth_Title}" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="{DynamicResource Eth_Desc}" 
                           Foreground="#BBB" 
                           FontSize="14" 
                           Margin="0,0,0,20"
                           TextWrapping="Wrap"/>

                <TextBlock Text="{DynamicResource Eth_MainTitle}" Foreground="Gray" FontSize="12" Margin="0,0,0,10" FontWeight="Bold"/>
                <WrapPanel Margin="0,0,0,20">
                    <Button x:Name="GlobalInternetTweaksBtn"
                            Content="{DynamicResource Eth_Global}"
                            Click="GlobalInternetTweaksBtn_Click"
                            Style="{StaticResource EthernetButtonStyle}"/>

                    <Button x:Name="DnsFirewallBtn"
                            Content="{DynamicResource Eth_DnsFirewall}"
                            Click="DnsFirewallBtn_Click"
                            Style="{StaticResource EthernetButtonStyle}"/>
                </WrapPanel>

                <TextBlock Text="{DynamicResource Eth_AdvTitle}" Foreground="Gray" FontSize="12" Margin="0,0,0,10" FontWeight="Bold"/>
                <WrapPanel Margin="0,0,0,20">
                    <Button x:Name="ResetNetworkBtn"
                            Content="{DynamicResource Eth_Reset}"
                            Click="ResetNetworkBtn_Click"
                            Style="{StaticResource EthernetButtonStyle}"/>

                    <Button x:Name="NaglesAlgorithmBtn"
                            Content="{DynamicResource Eth_Nagles}"
                            Click="NaglesAlgorithmBtn_Click"
                            Style="{StaticResource EthernetButtonStyle}"/>

                    <Button x:Name="OptimizeAdapterBtn"
                            Content="{DynamicResource Eth_OptAdapter}"
                            Click="OptimizeAdapterBtn_Click"
                            Style="{StaticResource EthernetButtonStyle}"/>

                    <Button x:Name="DnsPriorityBtn"
                            Content="{DynamicResource Eth_DnsPriority}"
                            Click="DnsPriorityBtn_Click"
                            Style="{StaticResource EthernetButtonStyle}"/>

                    <Button x:Name="NetworkTaskOffloadBtn"
                            Content="{DynamicResource Eth_Offload}"
                            Click="NetworkTaskOffloadBtn_Click"
                            Style="{StaticResource EthernetButtonStyle}"/>
                </WrapPanel>

                <TextBlock x:Name="StatusText" 
                           Foreground="#888" 
                           FontSize="12" 
                           Margin="0,5,0,0" 
                           TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
