<UserControl x:Class="Frakture_Tweaks.PowerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Frakture_Tweaks"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="PowerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="17,10"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="Width" Value="240"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel Margin="30">
            <TextBlock Text="{DynamicResource Power_Title}" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,20"/>

            <TextBlock Text="{DynamicResource Power_Desc}" 
                       Foreground="#BBB" 
                       FontSize="14" 
                       Margin="0,0,0,30"
                       TextWrapping="Wrap"/>

            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <Button x:Name="ImportPowerPlanBtn"
                        Content="{DynamicResource Power_Import}"
                        Click="ImportPowerPlanBtn_Click"
                        Background="#333"
                        Foreground="White"
                        FontSize="14"
                        Padding="17,10"
                        Margin="0,0,0,5"
                        HorizontalAlignment="Left"
                        Width="240"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#444"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <TextBlock Text="{DynamicResource Power_ImportWarning}" 
                           Foreground="#666" 
                           FontSize="11" 
                           FontStyle="Italic"
                           Margin="5,0,0,15"/>
            </StackPanel>

            <TextBlock Text="{DynamicResource Power_AddOptTitle}" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       Margin="0,20,0,15"/>

            <UniformGrid Columns="2" HorizontalAlignment="Left">
                <Button x:Name="DisableHibernateBtn"
                        Content="{DynamicResource Power_Hibernate}"
                        Click="DisableHibernateBtn_Click"
                        Style="{StaticResource PowerButtonStyle}"/>
                <Button x:Name="DisableSleepBtn"
                        Content="{DynamicResource Power_Sleep}"
                        Click="DisableSleepBtn_Click"
                        Style="{StaticResource PowerButtonStyle}"/>
                <Button x:Name="EnableUltimatePerfBtn"
                        Content="{DynamicResource Power_UltimatePerf}"
                        Click="EnableUltimatePerfBtn_Click"
                        Style="{StaticResource PowerButtonStyle}"/>
                <Button x:Name="OptimizePowerThrottlingBtn"
                        Content="{DynamicResource Power_Throttling}"
                        Click="OptimizePowerThrottlingBtn_Click"
                        Style="{StaticResource PowerButtonStyle}"/>
                <Button x:Name="DisableCStatesBtn"
                        Content="{DynamicResource Power_CStates}"
                        Click="DisableCStatesBtn_Click"
                        Style="{StaticResource PowerButtonStyle}"/>
                <Button x:Name="UnparkCoresBtn"
                        Content="{DynamicResource Power_Unpark}"
                        Click="UnparkCoresBtn_Click"
                        Style="{StaticResource PowerButtonStyle}"/>
            </UniformGrid>

            <TextBlock x:Name="StatusText" 
                       Foreground="#888" 
                       FontSize="12" 
                       Margin="0,15,0,0" 
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
